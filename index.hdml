    }

    .tool-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
    }

    .tool-card img {
      width: 100%;
      height: 150px;
      object-fit: cover;
    }

    .tool-card h3 {
      margin: 15px;
      font-size: 1.5rem;
      text-align: center;
    }

    .tool-card p {
      margin: 0 15px 15px;
      text-align: center;
      color: #666;
    }

    .tool-card a {
      display: block;
      background: #667eea;
      color: #fff;
      text-align: center;
      padding: 10px;
      font-size: 1rem;
      transition: background 0.3s ease;
    }

    .tool-card a:hover {
      background: #5a6fd1;
    }

    /* Footer */
    footer {
      background: #333;
      color: #fff;
      text-align: center;
      padding: 20px;
      margin-top: 40px;
    }

    footer p {
      margin: 0;
      font-size: 1rem;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      header h1 {
        font-size: 2rem;
      }

      header p {
        font-size: 1rem;
      }

      .tools-grid {
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      }

      .tool-card h3 {
        font-size: 1.3rem;
      }
    }

